{
  "name": "agentic-debugger",
  "displayName": "Agentic Debugger",
  "description": "AI-powered breakpoint placement using Claude Agent SDK",
  "version": "0.1.0",
  "publisher": "devinat1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devinat1/agentic-debugger"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onCommand:agenticDebugger.setBreakpoints",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agenticDebugger.setBreakpoints",
        "title": "Set Breakpoints for Feature",
        "category": "Agentic Debugger"
      }
    ],
    "keybindings": [
      {
        "command": "agenticDebugger.setBreakpoints",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d"
      }
    ],
    "configuration": {
      "title": "Agentic Debugger",
      "properties": {
        "agenticDebugger.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Anthropic API key for Claude. Get one at https://console.anthropic.com/",
          "order": 0
        },
        "agenticDebugger.clearExistingBreakpoints": {
          "type": "boolean",
          "default": false,
          "description": "Clear existing breakpoints before setting new ones",
          "order": 1
        },
        "agenticDebugger.bridgePort": {
          "type": "number",
          "default": 7070,
          "description": "Port for the bridge HTTP server used by MCP clients",
          "order": 2
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  }
}
